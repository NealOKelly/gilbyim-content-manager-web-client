                    </conditions>
                    <action type="Redirect" url="https://{HTTP_HOST}{REQUEST_URI}" appendQueryString="false" />
                </rule>
                <rule name="Bastion Tools - Re-drect from friendly URL to AWS AppStream stack URL" enabled="true" stopProcessing="true">
                    <match url="(.*)" />
                    <conditions logicalGrouping="MatchAll" trackAllCaptures="false">
                        <add input="{HTTP_HOST}" pattern="^(bastion\.)(.*)$" />
                    </conditions>
                    <action type="Redirect" url="https://authenticate.gilbyim.com/adfs/ls/idpinitiatedsignon.aspx?RelayState=RPID%3Dhttps%253A%252F%252Fsignin.aws.amazon.com%252Fsaml%26RelayState%3Dhttps%253A%252F%252Fappstream2.eu-west-1.aws.amazon.com%252Fsaml%253Fstack%253Dbastion-tools%2526accountId%253D655341601814" appendQueryString="false" />
                </rule>
                <rule name="Content Manager (AppStream) - Re-drect user-friendly URL to AWS AppStream" stopProcessing="true">
                    <match url="(.*)" />
                    <conditions logicalGrouping="MatchAll" trackAllCaptures="false">
                        <add input="{HTTP_HOST}" pattern="superuser.gilbyim.com" />
                    </conditions>
                    <action type="Redirect" url="https://authenticate.gilbyim.com/adfs/ls/idpinitiatedsignon.aspx?RelayState=RPID%3Dhttps%253A%252F%252Fsignin.aws.amazon.com%252Fsaml%26RelayState%3Dhttps%253A%252F%252Fappstream2.eu-west-1.aws.amazon.com%252Fsaml%253Fstack%253Dcontent-manager%2526accountId%253D655341601814" appendQueryString="false" />
                </rule>
            </rules>
